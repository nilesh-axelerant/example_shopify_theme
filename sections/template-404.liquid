<div class="max-w-md">
  <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
  <div class="my-4">
    <p>{{ section.settings.subtext_title }}</p>
  </div>
  <div class="my-4">
    {% assign back_url = shop.secure_url %}
    {% if section.settings.button_url != blank %}
      {% assign back_url = section.settings.button_url %}
    {% endif %}
    <a href="{{ back_url }}" class="px-4 inline py-2 text-base bg-green-500 hover:bg-green-800  text-white">{{ section.settings.button_label }}</a>
  </div>
</div>


{% schema %}
{
  "name": "404 Template",
  "tag": "section",
  "class": "flex items-center justify-center text-center py-7 h-screen",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "404",
      "label": "404 Heading title"
    },
    {
      "type": "text",
      "id": "subtext_title",
      "default": "The page not found",
      "label": "404 Subtext title"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Click here to go back",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ]
}
{% endschema %}
